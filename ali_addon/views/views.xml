 <odoo>
  <data>
    <record model="ir.ui.view" id="ali_branch_list">
      <field name="name">Ali Branch list</field>
      <field name="model">ali.branch</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="value"/>
          <field name="value2"/>
        </tree>
      </field>
    </record>
     
    <record model="ir.ui.view" id="ali_branch_form">
      <field name="name">Ali Branch Form view</field>
      <field name="model">ali.branch</field>
      <field name="arch" type="xml">
        <form>
            <sheet>
                <group>
          <field name="name"/>
                </group>
                <group>
          <field name="value"/>
          <field name="value2"/>
                </group>
            </sheet>
        </form>
      </field>
    </record>

    <record model="ir.actions.act_window" id="action_window_branch">
      <field name="name">Branches</field>
      <field name="res_model">ali.branch</field>
      <field name="view_mode">tree,form</field>
    </record>

  </data>
</odoo>